{
    "plugins": [
        "prettier-plugin-tailwindcss"
    ],
    "singleQuote": false,
    "experimentalTernaries": true,
    "tabWidth": 4,
    "semi": false,
    "endOfLine": "lf",
    "singleAttributePerLine": false,
    "printWidth": 100,
    "overrides": [
        {
            "files": [
                "*.js",
                "*.jsx",
                "*.ts",
                "*.tsx"
            ],
            "options": {
                "tabWidth": 2,
                "singleAttributePerLine": true,
                "singleQuote": true
            }
        },
        {
            "files": [
                "*.html",
                "*.htm",
                "*.json"
            ],
            "options": {
                "singleAttributePerLine": true
            }
        }
    ]
}